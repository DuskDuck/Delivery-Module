<h2 class="mt-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field form-control">
      <div class="d-flex justify-content-center">
        <div class="me-2">
          <%= f.label :name %><br />
         </div>
        <div class="ms-2">
          <%= f.text_field :name %>
        </div>
    </div>
     <div class="d-flex justify-content-center">
        <div class="me-2">
          <%= f.label :age %><br />
         </div>
        <div class="ms-2">
          <%= f.number_field :age %>
        </div>
    </div>
    <div class="field field form-control d-flex justify-content-around">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %><br>
      </div>
  </div>
  


<div class="field form-control">
  <div class=" d-flex justify-content-center">
      <div class="me-2">
          <%= f.label :email %><br />
         </div>
        <div class="ms-2">
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
  </div>
  <div class=" d-flex justify-content-center">
      <div class="me-2">
          <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
         </div>
        <div class="ms-2">
           <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
  </div>
  <div class=" d-flex justify-content-center">
      <div class="me-2">
          <%= f.label :password_confirmation %><br />
         </div>
        <div class="ms-2">
           <%= f.password_field :password_confirm, autocomplete: "new-password" %>
        </div>
  </div>
</div>
    
    
  </div>

 

  <div class="actions btn">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

